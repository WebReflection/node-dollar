{
  "name": "npm-dollar",
  "version": "2.0.0",
  "description": "A package.json scripts helper.",
  "bin": {
    "npm-dollar": "index.js"
  },
  "$": {
    "fail": "lint ./index.js",
    "greetings": "!prod echo -e 'Hello \\033[1m$\\033[0m !!!'",
    "wrong": "$ greetings.what.ever"
  },
  "scripts": {
    "$": "node index.js",
    "test": "npm run $ greetings"
  },
  "keywords": [
    "package",
    "helper",
    "scripts",
    "test",
    "bash"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/node-dollar.git"
  },
  "bugs": {
    "url": "https://github.com/WebReflection/node-dollar/issues"
  },
  "homepage": "https://github.com/WebReflection/node-dollar#readme"
}
